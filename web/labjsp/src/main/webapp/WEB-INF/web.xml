<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>MoveController</servlet-name>
        <servlet-class>controller.MoveController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>NewPlayerController</servlet-name>
        <servlet-class>controller.NewPlayerController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PhaseOneController</servlet-name>
        <servlet-class>controller.PhaseOneController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PhaseTwoController</servlet-name>
        <servlet-class>controller.PhaseTwoController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>FinishController</servlet-name>
        <servlet-class>controller.FinishController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>MoveController</servlet-name>
        <url-pattern>/moves</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>NewPlayerController</servlet-name>
        <url-pattern>/newplayer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PhaseOneController</servlet-name>
        <url-pattern>/phase1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PhaseTwoController</servlet-name>
        <url-pattern>/phase2</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>FinishController</servlet-name>
        <url-pattern>/finish</url-pattern>
    </servlet-mapping>


</web-app>